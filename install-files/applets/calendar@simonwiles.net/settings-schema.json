{
 "show-week-numbers" : {
    "type" : "checkbox",
    "default" : false,
    "description": "Show week numbers in calendar",
    "tooltip": "Check this to show week numbers in the calendar."
 },
 "use-custom-format" : {
    "type" : "checkbox",
    "default" : true,
    "description": "Use a custom date format",
    "tooltip": "Check this to define a custom format for the date in the calendar applet.",
    "value": true
 },
 "custom-format" : {
    "type" : "entry",
    "default" : "%l:%M %p",
    "description" : "Date format:",
    "indent": true,
    "dependency" : "use-custom-format",
    "tooltip" : "Set your custom format here."
 },
 "format-button" : {
    "type" : "button",
    "description" : "Show information on date format syntax",
    "indent": true,
    "dependency" : "use-custom-format",
    "callback" : "on_custom_format_button_pressed",
    "tooltip" : "Click this button to know more about the syntax for date formats."
 },
 "separator" : {
    "type" : "separator"
 },
 "header" : {
    "type" : "header",
    "description" : "World-Clock Settings"
 },
 "worldclock-setup-button" : {
    "type" : "button",
    "description" : "Configure World-clocks",
    "callback" : "_launch_worldclocks_config",
    "tooltip" : "Add, remove and configure additional clocks and format."
 },
 "worldclocks" : {
    "type" : "generic",
    "default" : ["UTC|UTC"]
 },
 "worldclocks-timeformat" : {
    "type" : "generic",
    "default" : "%_I:%M%P (%a)"
 }
}
